<div class="container">
  <div class="col s12 card-content">
    <div class="card-panel">
        <h3 class="logo-font">Create a Post</h3>
        <div class="card-panel">
    <div class="row">
        <form class="col s12">
            <div class="row">
                <div class="input-field col m3 s12">
                  <i class="material-icons prefix">account_circle</i>
                  <input id="user_name" type="text" class="validate">
                  <label for="user_name">User</label>
                </div>
            </div>
        </form>
    </div>
    <div class="row">
        <form class="col s12">
            <div class="row">
                <div class="input-field col m3 s12">
                    <i class="material-icons prefix">create</i>
                  <input id="post_title" type="text" class="validate">
                  <label for="post_title">Title</label>
                </div>
            </div>
        </form>
    </div>
    <div class="row">
        <form class="col s12">
          <div class="row">
            <div class="input-field col m4 s12">
                    <i class="material-icons prefix">create</i>
                    <textarea id="post_body" class="materialize-textarea" data-length="220"></textarea>
                    <label for="post_body">Style Description</label>
                  </div>
          </div>
        </form>
      </div>
    </div>  
  </div>
  </div>
</div>


<div class="container">
  <div class="col s12 card-content">
      <div class="card-panel">
        <h3>Item List</h3>
      <div class="row">

        <form class="col s12 card-content">
          <div class="card-panel">
            <div class="row">
              <div class="input-field col m4 s12">
                <i class="material-icons prefix">create</i>
                <input id="icon_telephone" type="tel" class="validate">
                <label for="icon_telephone">Item Name</label>
              </div>
                <div class="input-field col m4 s12">
                    <select>
                        <option value="" disabled selected>Item Category</option>
                        <option value="1">Option 1</option>
                        <option value="2">Option 2</option>
                        <option value="3">Option 3</option>
                      </select>
                      <label>Category Select</label>
                </div>
                <div class="input-field col m4 s12">
                  <i class="material-icons prefix">create</i>
                  <input id="post_brand" type="tel" class="validate">
                  <label for="post_brand">Item Brand</label>
                </div>
              </div>
            </form>
          

        <div class="row">
          <form class="col s12 card-content" action="#">
                <div class="file-field input-field col m6 s12">
                  <div class="btn pink lighten-1">
                    <span>Insert Picture</span>
                    <input type="file">
                  </div>
                  <div class="file-path-wrapper">
                    <input class="file-path validate" type="text">
                  </div>
                </div>
                <div class="input-field col m6 s12">
                        <i class="material-icons prefix">insert_link</i>
                        <input id="post_link" type="tel" class="validate">
                        <label for="post_link">Insert Link</label>
                      </div>
              </form>
            </div>
            </div>
            </div>
            <a id="add_item" class="btn-floating btn-large waves-effect waves-light pink lighten-1"><i class="material-icons">add</i></a>
          </div>  
</div>
</div>

